.custom-block
    background-color: rgb(156,163,175) !important;
    padding: 1rem 1.5rem;

    p
      color $textColorPrimary !important

  .custom-block-title
    font-weight 600
    margin-bottom: 0.4rem !important;
  &.tip, &.warning, &.danger
    padding 1rem 1.5rem !important
    border-left-width .5rem !important
    border-left-style solid !important
    margin 1rem 0 !important
  &.tip
    border-color #42b983
  &.warning
    background-color rgba(255,229,100,.3)
    border-color darken(#ffe564, 35%)
    color darken(#ffe564, 70%)
    .custom-block-title
      color darken(#ffe564, 50%)
  &.danger
    background-color #ffe6e6
    border-color darken(red, 20%)
    color darken(red, 70%)
    .custom-block-title
      color darken(red, 40%)
  &.details
    display block
    position relative
    border-radius 2px
    margin 1.6em 0
    padding 1.6em
    background-color #eee
    h4
      margin-top 0
    figure, p
      &:last-child
        margin-bottom 0
        padding-bottom 0
    summary
      outline none
      cursor pointer
